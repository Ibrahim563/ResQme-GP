<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.CMCDetails">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_customer_profile"
            android:layout_width="match_parent"
            android:tooltipText="رجوع"
            android:layout_height="?attr/actionBarSize"
            app:title="الصفحة الشخصية"
            app:titleTextAppearance="@font/fontlight"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/cmc_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chooseimage"/>
            <TextView
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:text="البيانات"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="24dp"
                android:background="@color/color_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="اسم الونش"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/winchname_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:fontFamily="@font/resqmefont"
                    android:textStyle="bold"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:text="اسم الونش"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="تخصص سيارات"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cmcmfgcountry_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="تخصص سيارات"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="العنوان"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/cmcaddress_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="العنوان"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="رقم التواصل"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cmcmobilenumber_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="رقم التواصل"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="التقييم العام / 5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cmcRate_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="التقييم"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/color_gray_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>



            <TextView
                android:id="@+id/car_status_tv"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:text="حالة العربية"
                android:fontFamily="@font/fontbold"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <!-- CAR DATA -->

            <TextView
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:id="@+id/car_data_header"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:text="بيانات العربية"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/car_data_layout"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_margin="24dp"
                android:background="@color/color_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="نوع العربية"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/car_type_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:fontFamily="@font/resqmefont"
                    android:textStyle="bold"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:text="نوع العربية"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="موديل سنة..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/car_model_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="موديل سنة..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="موعد الصيانة"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/car_maintenance_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="موعد الصيانة"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="ناقل الحركة"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/car_trnasmission_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="ناقل الحركة"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="رخصة السائق"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_margin="24dp"
                    android:id="@+id/driver_licence_image_after_approval"
                    android:layout_width="match_parent"
                    android:src="@drawable/driverlisenceimage"
                    android:layout_height="200dp"/>
                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="رخصة العربية"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_margin="24dp"
                    android:id="@+id/car_licence_image__after_approval"
                    android:layout_width="match_parent"
                    android:src="@drawable/driverlisenceimage"
                    android:layout_height="200dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>