<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.SendReport">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/resqmefont"
        android:text="نأسف لوجود تجربة سيئة ، سيساعدنا تقريرك في حل مشاكلك ... :)"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/text2"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/resqmefont"
        android:text="ستجد الرد الخاص بهذا التقرير في صفحة التقارير الخاصة بك."
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        >
    </TextView>
    <TextView
        android:id="@+id/text3"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/resqmefont"
        android:text="- الرجاء كتابة وصف مفصل حول مشكلتك."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        >
    </TextView>
    <TextView
        android:id="@+id/text4"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/resqmefont"
        android:text="- ستتم مشاركة بياناتك مع ResQme."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toBottomOf="@id/text3"
        >
    </TextView>
    <TextView
        android:id="@+id/text5"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/resqmefont"
        android:text="- سنراجع بلاغك ونرد عليك قريبًا !. "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toBottomOf="@id/text4"
        >
    </TextView>
    <TextView
        android:id="@+id/text6"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/resqmefont"
        android:text="- شكرا!. "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toBottomOf="@id/text5"
        >
    </TextView>

    <EditText
        android:id="@+id/reportdescriptionbtn"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:hint="ادخل المشكلة هنا...."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text6"
        android:drawablePadding="15dp"
        ></EditText>

    <Button
        android:id="@+id/sendButn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_gray_3"
        android:text="إرسال"
        android:fontFamily="@font/resqmefont"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportdescriptionbtn"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>