<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/color_gray_3"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/spare_parts_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/spare_parts_item_name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="اسم قطعة الغيار"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/spare_parts_item_price"
                android:textColor="@color/logo_color"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="سعر قطعة الغيار"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/spare_parts_item_usednew"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="حالة قطعة الغيار"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/spare_parts_item_cartype"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="نوع عربية قطعة الغيار"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>