<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.CMCDetails">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_customer_profile"
            android:layout_width="match_parent"
            android:tooltipText="رجوع"
            android:layout_height="?attr/actionBarSize"
            app:title="الصفحة الشخصية"
            app:titleTextAppearance="@font/fontlight"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/cmc_image_detailspag"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chooseimage"/>
            <TextView
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:text="البيانات"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="24dp"
                android:background="@color/color_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="اسم المركز"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cmcname_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:fontFamily="@font/resqmefont"
                    android:textStyle="bold"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:text="اسم المركز"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="تخصص سيارات"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cmcmfgcountry_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="تخصص سيارات"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="العنوان"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/cmcaddress_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="العنوان"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="رقم التواصل"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cmcmobilenumber_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="رقم التواصل"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/color_gray_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:text="التقييم العام / 5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cmcRate_text"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/resqmefont"
                    android:layout_marginTop="12dp"
                    android:text="التقييم"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>