<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".serviceProvider.ServiceProviderSettings">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_sp_settings"
            android:layout_width="match_parent"
            android:tooltipText="رجوع"
            android:layout_height="?attr/actionBarSize"
            app:title="الإعدادات"
            app:titleTextAppearance="@font/fontlight"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sp_settings_winch_requests"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="طلبات الونش"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/sp_settings_cmc_requests"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="طلبات مركز خدمة السيارات"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/sp_settings_spareparts_requests"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="طلبات قطع الغيار"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/sp_settings_questions"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="الاسئلة"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/sp_settings_sendReport"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="الإبلاغ عن مشكلة"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp">
        </Button>
        <Button
            android:id="@+id/sp_settings_reports"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="عرض التقارير/المشاكل"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp">
        </Button>
        <Button
            android:id="@+id/sp_settings_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="معلومات عنا"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp"
            >
        </Button>
        <Button
            android:id="@+id/sp_settings_contactUs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="تواصل معنا"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/resqmefont"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/sp_settings_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/red_color"
            android:text="تسجيل الخروج" />

    </LinearLayout>

    </ScrollView>
</LinearLayout>