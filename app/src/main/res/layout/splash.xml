<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".common.Splash">

        <ImageView
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:src="@drawable/splashbackgroundnew"
            android:layout_height="wrap_content">
        </ImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="-24dp"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/logo_color_3"
            android:src="@drawable/resqme_logo_icon"
            android:layout_height="200dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="سلامتك تهمنا"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/logo_color_3"
            android:fontFamily="@font/fontlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
</LinearLayout>