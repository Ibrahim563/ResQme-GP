<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/color_gray_3"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="طلب ونش"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_request_item_status_1_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="حالة الطلب: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_status_txt"
                app:layout_constraintRight_toLeftOf="@id/winch_request_item_status_1_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:text="حالة الطلب"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_request_item_winchname_1_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="اسم الونش: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_winch_name_txt"
                app:layout_constraintRight_toLeftOf="@id/winch_request_item_winchname_1_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:text="اسم الونش"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_request_item_winchownername_1_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="اسم مالك الونش: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_winch_owner_name_txt"
                app:layout_constraintRight_toLeftOf="@id/winch_request_item_winchownername_1_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:text="اسم مالك الونش"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_request_item_winchownerphone_1_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="رقم مالك الونش: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_winch_owner_phone_txt"
                app:layout_constraintRight_toLeftOf="@id/winch_request_item_winchownerphone_1_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:text="رقم مالك الونش"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_request_item_cost_1_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="تكلفة الخدمة (بالجنيه): "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_service_cost_txt"
                app:layout_constraintRight_toLeftOf="@id/winch_request_item_cost_1_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:text="التكلفة"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_request_item_description_1_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="الوصف المرفق بطلبك: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_description_txt"
                app:layout_constraintRight_toLeftOf="@id/winch_request_item_description_1_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:text="الوصف"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/winch_request_item_time_1_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="وقت إنشاء الطلب: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winch_request_item_timestamp_txt"
                app:layout_constraintRight_toLeftOf="@id/winch_request_item_time_1_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:text="الوقت"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@color/color_gray_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/winch_request_tracking_btn"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:text="تتبع طلبك"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="8dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:text="عند قبول طلبك من طرف مالك الونش يمكنك تتبع حركة الونش إليك عن طريق الضغط على زر تتبع طلبك."
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>