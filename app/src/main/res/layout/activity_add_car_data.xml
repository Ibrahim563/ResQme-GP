<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".customer.AddCarData">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_addcardata"
                android:layout_width="match_parent"
                android:tooltipText="رجوع"
                android:layout_height="?attr/actionBarSize"
                app:title="إضافة بيانات العربية"
                app:titleTextAppearance="@font/fontlight"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"/>
        </com.google.android.material.appbar.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:inputType="none"
                            android:text="نوع العربية"
                            android:id="@+id/car_types_dropdown_list"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:inputType="none"
                            android:text="موديل سنة؟"
                            android:id="@+id/car_model_years_dropdown_list"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:inputType="none"
                            android:text="موعد الصيانة"
                            android:id="@+id/maintenance_period_dropdown_list"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/color_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <RadioGroup
                        android:id="@+id/radio_transmission"
                        android:gravity="right"
                        android:layout_margin="12dp"
                        android:checkedButton="@id/radio_automatic"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radio_manual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="يدوي"/>
                        <RadioButton
                            android:id="@+id/radio_automatic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أوتوماتيك"/>
                    </RadioGroup>
                    <LinearLayout
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/color_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_marginLeft="12dp"
                            android:id="@+id/choose_driver_licence_image_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fontlight"
                            android:text="اختار صورة رخصة القيادة"
                            style="?attr/materialButtonOutlinedStyle"
                            app:icon="@drawable/ic_baseline_add_photo_alternate_24"/>
                        <ImageView
                            android:layout_margin="24dp"
                            android:id="@+id/driver_licence_image"
                            android:layout_width="match_parent"
                            android:src="@drawable/driverlisenceimage"
                            android:layout_height="200dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/color_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_marginLeft="12dp"
                            android:id="@+id/choose_car_licence_image_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fontlight"
                            android:text="اختار صورة رخصة العربية"
                            style="?attr/materialButtonOutlinedStyle"
                            app:icon="@drawable/ic_baseline_add_photo_alternate_24"/>
                        <ImageView
                            android:layout_margin="24dp"
                            android:id="@+id/car_licence_image"
                            android:layout_width="match_parent"
                            android:src="@drawable/driverlisenceimage"
                            android:layout_height="200dp"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/save_car_data_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="24dp"
                        android:text="حفظ وإرسال" />
                    <TextView
                        android:padding="24dp"
                        android:gravity="center"
                        android:text="* سيتم إرسال جميع البيانات الى فريق ResQme للتحقق منها وسيتم التواصل معك عبر البريد الإلكتروني، شكراً."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>



</LinearLayout>